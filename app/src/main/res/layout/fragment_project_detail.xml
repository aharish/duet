<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/activity_project_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:text="Title"/>

    <TextView
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/activity_project_desc_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:layout_below="@+id/activity_project_title_textview"
        android:layout_marginTop="12dp"
        android:text="Lorem ipsum dolor sit amet"/>

    <ListView
        android:id="@+id/activity_project_task_listview"
        android:layout_below="@+id/activity_project_desc_textview"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>